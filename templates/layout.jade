!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato:300,400,700|')
      link(rel='stylesheet', href='/css/font-awesome.min.css')
      link(rel='stylesheet', href='/css/bootstrap.min.css')
      link(rel='stylesheet', href='/css/blog.css')

  body(class=bodyclass)
    header.header
      div.title.clearfix
        h1.pull-left= locals.name
        div.links.pull-right
          block header-links
            a(href='stuff.html') stuff I've made

      div.banner-bg
        div.banner

    div#content
      div.container
        div.row
          div.col-md-offset-1.col-md-10
            block content
    footer
      div.container
        div.row
          div.col-md-offset-1.col-md-6
            div.wave
            div 
              !=contents['about.md'].html
          div.col-md-4 
            !=contents['contacts.md'].html
