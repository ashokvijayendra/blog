.article-detail
  h1
    second-header-font()
    color: $main-color

  h2
    third-header-font()
    color: $main-color

  h3
    fourth-header-font()
    color: $focal-color

.callout
  padding: 10px
  margin: 20px 0
  max-width: 600px

.wisdom
  background-color: #CFF7B8
  color: #655C6F

.pitfall
  background-color: #EEC2C4

.addendum
  background-color: #F9D423
  color: #BF4D28

.btw
  background-color: #DDD
  color: black

.fiddle
  display: inline-block
  background-color: orange
  color: white
  margin: 10px 0
  padding: 5px

  &::after
    margin-left: 5px
    content: "\f045"
    font-family: FontAwesome

.diagram
  margin: 3em 0
  width: 90%

$noscript-color = #620a0a
.noscript-warning
  margin: 30px 0
  max-width: 600px
  padding: 10px
  background-color: #ce9393
  color: $noscript-color
  border: 1px dashed $noscript-color
